## Database
database.type = memory

## Cluster Manager
cluster.manager.type = Snooze

## BootStrapAddr
cluster.bootstrapNodes = localhost:5000,192.168.0.2:5001

## ThreadPoolSize
cluster.serviceSize = 10

## Polling Interval(s)
cluster.pollingInterval = 1

## Polling Timeout(s)
cluster.pollingTimeout = 120

## Connection Timeout(s)
cluster.connectionTimeout = 360

## Default Username
cluster.username = work

## Default Password
cluster.password = work


