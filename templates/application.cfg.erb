################ Networking ####################
## Listen address (default: listen on all interfaces)
network.listen.address = localhost

## Control
network.listen.controlDataPort = 4001

## Database
database.type = memory

## Cluster Manager
cluster.manager.type = Snooze

## BootStrapAddr
cluster.bootstrapNodes = 

## ThreadPoolSize
cluster.serviceSize = 10

## Polling Interval(s)
cluster.pollingInterval = 1

## Polling Timeout(s)
cluster.pollingTimeout = 60

## Connection Timeout(s)
cluster.connectionTimeout = 120

## Default Username
cluster.username = work

## Default Password
cluster.password = work

## dmtcp default options
dmtcp.port = 7779
dmtcp.interval = 0
dmtcp.ckptdir = ./
dmtcp.tmpdkr = /tmp

## 
# Storage section
##

# Storage type ( NFS, S3)
storage.type = S3
storage.endpoint = <%= @storageEndpoint %>

# NFS Settings
storage.nfs.server.export= /opt/dmtcp
# it becomes commin to all storage type : this
# is the local directory where checkpoints are saved
# in case of NFS this directory is created and mounted
# in case of S3 it is just created
storage.nfs.client.mountDir = /home/work/checkpoints

# S3 specific parameters
storage.s3.access_key = 12345
storage.s3.private_key = 12345


## Local controller monitor settings
monitor.transport = RABBITMQ
monitor.port = 5672
monitor.username = snooze
monitor.password = snooze
monitor.vhost = snooze-vhost
